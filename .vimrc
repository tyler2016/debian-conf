"show line number
set nu
syntax on
"auto indent
set ai
"status bar
set laststatus=2
set hlsearch
set ts=4
set expandtab
set background=light
set ruler
set showcmd
set relativenumber

set cursorline
"light grey
hi cursorline cterm=none ctermbg=241 ctermfg=none guibg=none guifg=none

"powerline-status
"need install: vim-python
"set rtp+=/usr/local/lib/python2.7/dist-packages/powerline/bindings/vim/
"set laststatus=2
"set t_Co=256
